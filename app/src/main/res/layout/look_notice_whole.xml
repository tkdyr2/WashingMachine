<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LookNoticeWhole">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="718dp"
                android:orientation="vertical"
                android:background="#212121">


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="전체 건의 사항"
                    android:textColor="#FFBB00"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="5dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="350dp"
                        android:layout_height="40dp"
                        android:background="#ffffff">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/notice"
                            android:id="@+id/imageView"
                            android:background="#000000"/>
                    <TextView
                            android:text="이용자 건의 사항"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:textSize="30dp"
                            android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="350dp"
                            android:layout_height="40dp"
                            android:background="#ffffff"
                            android:layout_marginTop="20dp">

                        <ImageView
                                android:layout_width="74dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_sentiment_satisfied_white_24dp"
                                android:id="@+id/imageView2"
                                android:background="#000000"/>

                        <TextView
                                android:text="관리자 답"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView11"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textSize="30dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_marginTop="50dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="350dp"
                        android:layout_height="40dp"
                        android:background="#ffffff">

                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/notice"
                            android:id="@+id/imageView3"
                            android:background="#000000"/>

                    <TextView
                            android:text="이용자 건의 사항"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView15"
                            android:textSize="30dp"
                            android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="350dp"
                            android:layout_height="40dp"
                            android:background="#ffffff"
                            android:layout_marginTop="20dp">

                        <ImageView
                                android:layout_width="74dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_sentiment_satisfied_white_24dp"
                                android:id="@+id/imageView6"
                                android:background="#000000"
                        />
                        <TextView
                                android:text="관리자 답"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView13"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textSize="30dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_marginTop="50dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="350dp"
                        android:layout_height="40dp"
                        android:background="#ffffff">

                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/notice"
                            android:id="@+id/imageView5"
                            android:background="#000000"/>
                    <TextView
                            android:text="이용자 건의 사항"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView17"
                            android:textSize="30dp"
                            android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="350dp"
                            android:layout_height="40dp"
                            android:background="#ffffff"
                            android:layout_marginTop="20dp">

                        <ImageView
                                android:layout_width="74dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_sentiment_satisfied_white_24dp"
                                android:id="@+id/imageView8"
                                android:background="#000000"/>

                        <TextView
                                android:text="관리자 답"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView16"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textSize="30dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="50dp">

                <Button
                        android:text="확인"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:id="@+id/sent3"
                        android:layout_weight="1"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="60dp"/>

                <Button
                        android:text="작성"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:id="@+id/cancellation2"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:layout_marginLeft="30dp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>